<div class="page-header">
  <%= link_to new_order_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Новый заказ
  <% end %>
  <h1>Поступившие заказы</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>	
      			<th>ID</th>
            <th>ФИО</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Дата заезда</th>
            <th>Дата выезда</th>
            <th>Бронь</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @orders) do |order| %>
      			<td><%= order.id %></td>
            <td><%= order.name %></td>
            <td><%= order.email %></td>
            <td><%= order.mobile %></td>
            <td><%= order.date_of_arrival %></td>
            <td><%= order.date_of_departure %></td>
            <td><%= order.reserved_rooms %></td>
            <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
