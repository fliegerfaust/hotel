<%= form_for(@room, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @room.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h4>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :lock_version %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :roomtype, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :roomtype, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => "form-control", rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_url, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :image_url, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
    	 <%= f.select :quantity, Room::ROOM_QUANTITY, promt: '1' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
